<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_dark_blue"
    tools:context=".activities.PreferWorkoutActivity">

    <RelativeLayout
        android:id="@+id/relative_back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_back_arrow_foreground"
            app:tint="@color/white" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_below="@id/relative_back"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/preferwrkout1"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/preferwrkout2"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_preferedLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/ll_head"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_virtualSession"
            android:layout_width="340dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custome_cardview"
            android:clickable="true"
            android:fontFamily="@font/rubik_regular"
            android:focusable="true"
            android:letterSpacing="0.05"
            android:text="@string/virtual_session"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home"
            android:layout_width="340dp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custome_cardview"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/rubik_regular"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.05"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gym"
            android:layout_width="340dp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custome_cardview"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.05"
            android:text="@string/gym"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_outdoors"
            android:layout_width="340dp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custome_cardview"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.05"
            android:text="@string/outdoors"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/ll_preferedLocation"
        android:layout_alignParentBottom="true"
        >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="340dp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/coustom_button_border"
        android:fontFamily="@font/rubik_regular"
        android:clickable="true"
        android:focusable="true"
        android:letterSpacing="0.05"
        android:text="@string/continu"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>