<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_profilepic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@id/txt_recommend"
            android:layout_toRightOf="@id/img_profile_pic"
            android:fontFamily="@font/rubic_medium"
            android:padding="@dimen/_3sdp"
            android:text="Jayesh"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/rubik_regular"
            android:padding="@dimen/_3sdp"
            android:text="@string/lbl_recommend"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>

</RelativeLayout>